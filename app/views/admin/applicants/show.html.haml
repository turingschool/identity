.container
  .row
    .col-md-11.step-box.main
      %p
        = link_to "admin dashboard", admin_path
        = " / "
        = link_to @current_step, subset_of_admin_applicants_path(@current_step)
        = " / "
        = @applicant.name.downcase
      .row
        = render 'applicant', applicant: @applicant, application: @applicant.application
        = render 'site/youtube', applicant: @applicant, url: @applicant.application.video_url
      .row
        = render 'actions', applicant: @applicant, applicant_actions: @applicant_actions
  - if @applicant.application.evaluated_by?(current_user)
    .row
      .col-md-11.step-box.main
        = render 'admin/evaluations/summary', application: @applicant.application