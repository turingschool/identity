%h2.title.orange Evaluations

%hr

%h4.title Evaluation Scores

- application.initial_evaluations.each do |evaluation|
  .row
    .col-md-2
      %h5.title.orange Evaluator
      %p #{evaluation.evaluator.name}
    .col-md-3
      %h5.title.orange Criteria
      - evaluation.criteria.each do |criterion|
        %p #{criterion.title}
    .col-md-3
      %h5.title.orange Points
      - evaluation.criteria.each do |criterion|
        - if criterion.score
          %p #{criterion.score} points
        - else
          %p Score is pending
    .col-md-2
      %h5.title.orange Actions
      %p
        - if evaluation.evaluator == current_user
          = link_to 'Edit Application', edit_admin_evaluation_path(evaluation)

- if application.initial_evaluations.any? {|evaluation| evaluation.has_notes?}
  %h4.title Evaluation Notes

  - application.initial_evaluations.each do |evaluation|
    - if evaluation.has_notes?
      .row
        .col-md-2
          %h5.title.orange Evaluator
          %p #{evaluation.evaluator.name}
        .col-md-8
          %h5.title.orange Notes
          - evaluation.criteria.select(&:has_notes?).each do |criterion|
            %h5.title.notes
              = criterion.title
            %p
              = criterion.notes
