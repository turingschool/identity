.container
  .row
    = render "step/shared/progress_bar"
  .row
    .col-md-2
    .col-md-8
      %h2.title.center Resume

      %hr

      %p= t 'steps.resume'

      %hr

      %div.center
        %h3.title Upload your Resume
        = form_for :resume, url: step_resume_path, method: :put, html: { class: "form-inline", role: "form", multipart: true} do |f|
          - if @resume.application.errors.any?
            %p= @resume.application.errors.full_messages.join("<br/>")
          - if @resume.errors.any?
            %p= @resume.errors.full_messages.join("<br/>")
          .form-group
            = f.file_field :file, class: "form-control"
          .form-group
            = f.submit 'Upload', class: "btn btn-warning btn-submit"
    .col-md-2