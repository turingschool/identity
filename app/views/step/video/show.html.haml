.container
  .row
    = render "step/shared/progress_bar"
  .row
    .col-md-2
    .col-md-8
      %h2.title.center Video Submission

      %hr

      = mt 'steps.video'

      %hr

      %div.center
        %h3.title Unlisted YouTube Video URL

        = form_for :video, url: step_video_path, method: :put, html: { class: "form-inline", role: "form" } do |f|
          - if @video.errors.any?
            %p= @video.errors.full_messages
          .form-group
            = f.text_field :url, placeholder: "http://www.youtube.com/watch?v=yourvideo", class: "form-control url-input"
          .form-group
            = f.submit 'Save', class: "btn btn-warning btn-submit"
    .col-md-2

